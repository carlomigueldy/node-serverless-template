{
  "name": "node-serverless-template",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "dev": "sls offline",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --config .prettierrc.json --write **/*.ts",
    "typechain": "rimraf typechain && typechain --target ethers-v5 --out-dir 'typechain' './abis/*.json'",
    "postinstall": "npm run typechain",
    "pretty-quick": "pretty-quick",
    "build": "rimraf .build && tsc --project ./",
    "deploy": "yarn build && sls deploy",
    "deploy:development": "NODE_ENV=development npm run deploy -- --stage development",
    "deploy:production": "NODE_ENV=production npm run deploy -- --stage production",
    "deploy:staging": "NODE_ENV=staging npm run deploy -- --stage staging",
    "prepare": "husky install",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register",
    "test:merkle": "yarn test tests/merkle.spec.ts --timeout 10000",
    "test:all": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'tests/**/*.ts'"
  },
  "dependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.12",
    "@types/express-session": "^1.17.5",
    "@types/express-validator": "^3.0.0",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/mongoose": "^5.11.97",
    "@types/passport": "^1.0.11",
    "@types/passport-local": "^1.0.34",
    "@types/passport-twitter": "^1.0.37",
    "axios": "^0.27.2",
    "body-parser": "^1.20.1",
    "cors": "^2.8.5",
    "ethers": "^5.7.1",
    "express": "^4.17.1",
    "express-session": "^1.17.3",
    "express-validator": "^6.14.2",
    "express-winston": "^4.2.0",
    "jsonwebtoken": "^8.5.1",
    "keccak256": "^1.0.6",
    "merkletreejs": "^0.3.2",
    "mongoose": "^6.8.0",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "passport-twitter": "^1.0.4",
    "serverless-http": "^2.7.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@typechain/ethers-v5": "^10.1.0",
    "@types/chai": "^4.3.3",
    "@types/express": "^4.17.14",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.7.18",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "chai": "^4.3.6",
    "dotenv": "^16.0.2",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.1",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "mocha": "^10.0.0",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "rimraf": "^3.0.2",
    "serverless-dotenv-plugin": "^4.0.2",
    "serverless-offline": "^10.0.2",
    "serverless-plugin-typescript": "^2.1.2",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.0",
    "typescript": "^4.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "lint-staged": {
    "handler.ts": "pretty-quick --staged",
    "**/*": "prettier --write --ignore-unknown"
  }
}